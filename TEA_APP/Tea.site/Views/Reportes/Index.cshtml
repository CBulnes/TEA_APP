@model dynamic
@using Tea.utilities; 
@{
    ViewData["Title"] = "Reportes";
}
    <!--nps-->
    <div class="row" style="background-color: #FFF; margin-top: 30px;">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-xs-12 col-sm-6 col-lg-4 col-xl-2">
                        <div class="form-group">
                            <label>Año:</label>
                            <select class="input100 custom-select col-12" id="cboAño" style="padding: 0 25px 0 25px;">
                                <option value="2022">2022</option>
                                <option value="2021">2021</option>
                                <option value="2020">2020</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" id="div_graficos">

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Reporte de indicador de NPS - @Helper.GetNombreSite()</h4>
                            <div class="flot-chart">
                                <div class="flot-chart-content" id="reporte_nps"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">&nbsp;</h4>
                            <div class="flot-chart">
                                <div class="flot-chart-content" id="indicador_nps"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">&nbsp;</h4>
                            <div class="flot-chart">
                                <div id="tabla_nps"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 hide-element">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">&nbsp;</h4>
                            <div class="flot-chart">
                                <div id="tabla_resultados_flujo"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!--encuestas-->
    <div class="row" style="background-color: #FFF; margin-top: 30px;">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Encuestas</h4>
                    <div id="encuestas" style="width:100%; height:400px;"></div>
                </div>
            </div>
        </div>

