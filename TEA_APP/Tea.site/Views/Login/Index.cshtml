@model string
@using Tea.utilities;
@{
    Layout = null;
    var dHoy = DateTime.Now;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login - @Helper.GetNombreSite()</title>

    <link rel="stylesheet" type="text/css" href="~/login/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/login/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/login/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/login/css/main.css?f=@dHoy.ToString("yyyyMMddhhmmss")">
    <link rel="stylesheet" type="text/css" href="~/basic/cust_styles.css?f=@dHoy.ToString("yyyyMMddhhmmss")">

    <link href="~/assets/plugins/sweetalert/sweetalert.css" rel="stylesheet" type="text/css">

    <style>
        .bg {
            position: absolute;
            z-index: -1;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            /*background: url('https://images.freeimages.com/images/large-previews/01a/technology-background-1632715.jpg') center center;*/
            opacity: .4;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="preloader hide-element">
        <div style="display: grid; place-items: center; height: 100%;">
            <img src="~/images/loading.gif" />
        </div>
    </div>

    <div class="limiter">
        <div class="container-login100" style="position: relative; z-index: 1;">
            <div class="bg"></div>
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-33">
                        TEA APP
                    </span>

                    <div class="wrap-input100 rs1 validate-input" data-validate="Ingresa tu email">
                        <input class="input100" type="email" name="email" placeholder="Email" id="txtEmail" autocomplete="off" />
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>
                    <br />
                    <div class="wrap-input100 rs1 validate-input" data-validate="Ingresa tu contraseña">
                        <input class="input100" type="password" name="password" placeholder="Contraseña" id="txtPassword" autocomplete="off" />
                        <span class="focus-input100-1"></span>
                        <span class="focus-input100-2"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-20">
                        <button type="button" id="btn_ing" class="login100-form-btn" style="background-color: #ff6060 !important; font-weight: bold;">
                            Ingresar
                        </button>
                    </div>
                    <div class="form-group form-group p-t-15 p-b-5 hide-element">
                        <div class="col-sm-12 text-center">
                            <p>¿No estás registrado? <a onclick="redireccionar('Registro', 1)" href="javascript:void(0)" class="text-info m-l-5"><b>¡Hazlo aquí!</b></a></p>
                        </div>
                    </div>

                    <div class="text-center p-t-5 p-t-15 p-b-0">
                        <a onclick="redireccionar('RecuperarContraseña', 2)" href="javascript:void(0)" class="text-info m-l-5" style="color: #565656 !important;"><b>ACTUALIZAR CONTRASEÑA</b></a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="mdl_nocliente" class="modal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog" role="document" style="height: 90%; display: grid; place-items: center;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Línea no registrada</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="hide-element" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>El número ingresado no corresponde a la empresa, ¿desea ingresar como <b>invitado</b>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn_aceptar">Aceptar</button>
                    <button type="button" class="btn btn-secondary" id="btn_volver">Volver</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var ruta = '@Model';
    </script>

    <script src="~/login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/login/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/login/vendor/select2/select2.min.js"></script>
    <script src="~/login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/login/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/login/vendor/countdowntime/countdowntime.js"></script>

    <script src="~/login/js/main.js?f=@dHoy.ToString("yyyyMMddhhmmss")"></script>

    <script src="~/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script type="text/javascript">

        function alerta(text, type) {
            !function ($) {
                "use strict";
                var SweetAlert = function () { };

                SweetAlert.prototype.init = function () {
                    //Auto Close Timer
                    //$('#sa-close').click(function () {
                    swal({
                        title: "Auto close alert!",
                        type: type,
                        text: text,
                        timer: 2000,
                        showConfirmButton: false,
                        allowEscapeKey: false
                    });
                    //});
                },
                    //init
                    $.SweetAlert = new SweetAlert, $.SweetAlert.Constructor = SweetAlert
            }(window.jQuery),

                //initializing
                function ($) {
                    "use strict";
                    $.SweetAlert.init()
                }(window.jQuery);
        }
    </script>

</body>
</html>